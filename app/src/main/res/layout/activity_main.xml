<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tlText"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginBottom="47dp"
        android:text="TL :"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/jpyText" />

    <TextView
        android:id="@+id/usdText"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginBottom="59dp"
        android:text="USD"
        app:layout_constraintBottom_toTopOf="@+id/jpyText"
        app:layout_constraintEnd_toEndOf="@+id/jpyText"
        app:layout_constraintStart_toStartOf="@+id/jpyText"
        app:layout_constraintTop_toBottomOf="@+id/chfText" />

    <TextView
        android:id="@+id/jpyText"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginBottom="59dp"
        android:text="JPY :"
        app:layout_constraintBottom_toTopOf="@+id/tlText"
        app:layout_constraintEnd_toEndOf="@+id/tlText"
        app:layout_constraintStart_toStartOf="@+id/tlText"
        app:layout_constraintTop_toBottomOf="@+id/usdText" />

    <TextView
        android:id="@+id/chfText"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginBottom="59dp"
        android:text="CHF :"
        app:layout_constraintBottom_toTopOf="@+id/usdText"
        app:layout_constraintEnd_toEndOf="@+id/usdText"
        app:layout_constraintStart_toStartOf="@+id/usdText"
        app:layout_constraintTop_toBottomOf="@+id/cadText" />

    <TextView
        android:id="@+id/cadText"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="109dp"
        android:layout_marginBottom="49dp"
        android:text="CAD :"
        app:layout_constraintBottom_toTopOf="@+id/chfText"
        app:layout_constraintEnd_toEndOf="@+id/chfText"
        app:layout_constraintHorizontal_bias="0.265"
        app:layout_constraintStart_toStartOf="@+id/chfText"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="241dp"
        android:layout_height="0dp"
        android:layout_marginBottom="68dp"
        android:onClick="guncelle"
        android:text="GÃœNCELLE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tlText" />
</androidx.constraintlayout.widget.ConstraintLayout>